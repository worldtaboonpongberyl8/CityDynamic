<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RecheckCancelReason</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL( CancelReason__c ,&quot;Cancel by CRM&quot;),
ISBLANK( CancelReasonforCRM__c )
)</errorConditionFormula>
    <errorDisplayField>CancelReasonforCRM__c</errorDisplayField>
    <errorMessage>Please input cancel reason.</errorMessage>
</ValidationRule>
